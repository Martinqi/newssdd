<script>
    let span=document.querySelector('span');
    let i=3;
    let a=document.querySelector('a');
    let url=a.href;
    a.onclick=function (e) {
        e.preventDefault();
        if (url=='http://localhost/PHP/managementSystem/admin/index.html'){
            top.location.href=url
        }else{
            location.href=url
        }
    };
    setInterval(function () {
        i--;
        span.innerHTML=i;
        if (i===0){
            if (url=='http://localhost/PHP/managementSystem/admin/index.html'){
                    top.location.href=url
                }else{
                    location.href=url
                }
        }
    },1000);
</script>